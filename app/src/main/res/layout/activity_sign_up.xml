<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_radian"
    tools:context=".Activities.SignUpActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civProfilePic"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ic_person_black_24dp" />

        <EditText
            android:inputType="textPersonName"
            android:id="@+id/etFullNameSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/civProfilePic"
            android:layout_margin="10dp"
            android:background="@drawable/shapeemail"
            android:drawableLeft="@drawable/ic_person_black_24dp"
            android:drawablePadding="10dp"
            android:hint="Full Name"
            android:padding="15dp"
            android:textColor="#fff"
            android:textColorHighlight="#fff"
            android:textColorHint="#fff" />

        <EditText
            android:inputType="textEmailAddress"
            android:id="@+id/etEmailSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/etFullNameSignUp"
            android:layout_margin="10dp"
            android:background="@drawable/shapeemail"
            android:drawableLeft="@drawable/ic_baseline_email_24"
            android:drawablePadding="10dp"
            android:hint="Email"
            android:padding="15dp"
            android:textColor="#fff"
            android:textColorHighlight="#fff"
            android:textColorHint="#fff" />

        <EditText
            android:id="@+id/etPasswordSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etEmailSignUp"
            android:layout_margin="10dp"
            android:background="@drawable/shapeemail"
            android:drawableLeft="@drawable/ic_lock_black_24dp"
            android:drawablePadding="10dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="15dp"
            android:textColor="#fff"
            android:textColorHighlight="#fff"
            android:textColorHint="#fff" />

        <EditText
            android:inputType="number"
            android:id="@+id/etPhoneNumSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etPasswordSignUp"
            android:layout_margin="10dp"
            android:background="@drawable/shapeemail"
            android:drawableLeft="@drawable/ic_baseline_phone_24"
            android:drawablePadding="10dp"
            android:hint="PhoneNumber"
            android:padding="15dp"
            android:textColor="#fff"
            android:textColorHighlight="#fff"
            android:textColorHint="#fff" />

        <EditText
            android:inputType="number"
            android:id="@+id/etAgeSignUp"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etPhoneNumSignUp"
            android:layout_margin="10dp"
            android:background="@drawable/shapeemail"
            android:drawableLeft="@drawable/ic_baseline_age_new_24"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:hint="Age"
            android:padding="15dp"
            android:textColor="#fff"
            android:textColorHighlight="#fff"
            android:textColorHint="#fff" />

        <EditText
            android:inputType="number"
            android:id="@+id/etWeightSignUp"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etPhoneNumSignUp"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:background="@drawable/shapeemail"
            android:drawableLeft="@drawable/ic_baseline_line_weight_24"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:hint="Weight"
            android:padding="15dp"
            android:textColor="#fff"
            android:textColorHighlight="#fff"
            android:textColorHint="#fff" />

        <EditText
            android:inputType="text"
            android:id="@+id/etLocationSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etAgeSignUp"
            android:layout_margin="10dp"
            android:background="@drawable/shapeemail"
            android:drawableLeft="@drawable/ic_baseline_location_on_24"
            android:drawablePadding="10dp"
            android:hint="Location"
            android:padding="15dp"
            android:textColor="#fff"
            android:textColorHighlight="#fff"
            android:textColorHint="#fff" />

        <EditText
            android:inputType="text"
            android:id="@+id/etBloodGroupSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etLocationSignUp"
            android:layout_margin="10dp"
            android:background="@drawable/shapeemail"
            android:drawableLeft="@drawable/ic_baseline_blood_colors_24"
            android:drawablePadding="10dp"
            android:hint="Blood Group"
            android:padding="15dp"
            android:textColor="#fff"
            android:textColorHighlight="#fff"
            android:textColorHint="#fff" />

        <EditText
            android:inputType="text"
            android:id="@+id/etGenderSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etBloodGroupSignUp"
            android:layout_margin="10dp"
            android:background="@drawable/shapeemail"
            android:drawableLeft="@drawable/ic_baseline_blood_colors_24"
            android:drawablePadding="10dp"
            android:hint="Gender"
            android:padding="15dp"
            android:textColor="#fff"
            android:textColorHighlight="#fff"
            android:textColorHint="#fff" />

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/etGenderSignUp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/shapelogin"
            android:padding="15dp"
            android:text=" Register" />

        <TextView
            android:layout_below="@id/btnRegister"
            android:id="@+id/tvLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:padding="10dp"
            android:text="Don't Have Account? Login In"
            android:textColor="@color/white"
            android:textSize="16dp" />

    </RelativeLayout>
</ScrollView>